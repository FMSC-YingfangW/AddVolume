
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow1"
        android:orientation="horizontal">
        <TextView
            android:text="Cruise File:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCruiseFile" />
        <TextView
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_margin="1dp"
            android:paddingLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFileName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow2"
        android:orientation="horizontal">
        <TextView
            android:text="Sale Name:"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvSaleName" />
        <EditText
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtSaleName"
            android:layout_marginBottom="0.0dp" />
        <TextView
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txvSaleName"
            android:layout_marginBottom="0.0dp"/>
        <TextView
            android:text="Sale Num:"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvSaleNum" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tableRow3"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:text="CuttingUnit:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_gravity="left|center"
            android:layout_height="wrap_content"
            android:id="@+id/tvCutUnit" />
        <Spinner
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:paddingRight="10dp"
            android:id="@+id/txtCutUnit" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:visibility="gone"
            android:id="@+id/llCutUnit2">
            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:inputType="number"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:id="@+id/txtCutUnit2" />
            <TextView
                android:text="Description:"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvDesc" />
            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="left|center"
                android:id="@+id/txtCutUnit2Desc" />
          <Button
            android:id="@+id/btnShowCutUnitList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Show CutUnitList" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tableRow31"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
      <TextView
            android:text="UserInitial:"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvUserInit" />
      <EditText
          android:layout_margin="2dp"
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:inputType="textCapCharacters"
          android:id="@+id/txtUserInit"
          android:layout_marginBottom="0.0dp" />
      <TextView
           android:text="PaymentUnit:"
           android:gravity="right"
           android:layout_margin="2dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:id="@+id/tvPaymentUnit"
           android:layout_marginRight="0.0dp" />
      <EditText
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="2dp"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:id="@+id/txtPaymentUnit"
          android:layout_marginBottom="0.0dp" />
      <Button
          android:id="@+id/btnSalePrice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:textStyle="bold"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:text="SalePrice" /> 
      
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trContract"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
      <TextView
            android:text="Contract#:"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvContractNum" />
      <EditText
          android:layout_margin="2dp"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:id="@+id/txtContractNum"
          android:layout_marginBottom="0.0dp" />
      <TextView
          android:text="Purchaser/Contractor:"
          android:layout_margin="3dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left|center"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:id="@+id/tvContractor" />
      <EditText
          android:layout_margin="2dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="left"
          android:layout_weight="1"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:id="@+id/txtContractor"
          android:layout_marginBottom="0.0dp" />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tableLayout1">
        <TableRow
            android:id="@+id/trBtns"
            android:layout_width="wrap_content">
          <Button
               android:id="@+id/btnExitMain"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1.2"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textStyle="bold"
               android:text="Exit" />
            <Button
                android:id="@+id/btnEnterTree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:text="Enter Tree" />
        </TableRow>
        <TableRow
            android:id="@+id/trBtns2"
            android:layout_width="wrap_content">
          <Button
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:text="ViewReport" />
          <Button
                android:id="@+id/btnReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:text="CreateSumReport" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:id="@+id/llHeader"
        android:background="@drawable/bgh">
        <TextView
            android:text="ID"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:id="@+id/tvIdShowR"
            android:textColor="@android:color/white" />
        <TextView
            android:text="Spec"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tvSpeciesShowR" />
        <TextView
            android:text="DBH"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tvDBHShowR" />
        <TextView
            android:text="L/D"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tvLiveDeadShowR" />
        <TextView
            android:text="Prod"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tvProdShowR" />
        <TextView
            android:text="CutUnt"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tvCutUnitShowR" />
        <TextView
            android:text="PayUnt"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/tvPayUnitShowR" />
      <TextView
          android:text="+/-"
          android:layout_margin="1dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
          android:gravity="right"
          android:textColor="@android:color/white"
          android:id="@+id/tvAddRemShowR" />
      <TextView
            android:text="PrimVol"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:id="@+id/tvCUFTShowR" />
      <TextView
          android:text="2ndVol"
          android:layout_margin="1dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="right"
          android:textColor="@android:color/white"
          android:id="@+id/tvSecdVolShowR" />
      <TextView
            android:text="TotHt"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:id="@+id/tvTotHTShowR" />
      <TextView
            android:text="TrCnt"
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:id="@+id/tvTrCntShowR" />
    </LinearLayout>
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:isScrollContainer="false"
        android:id="@+id/lvTemp" />
</LinearLayout>